<%= form_for(@person, html:{class:"form-horizontal"}) do |f| %>
    <% if @person.errors.any? %>
      <div id="error_explanation" class="alert alert-danger col-sm-offset-2">
        <strong><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</strong>
        <ul>
        <% @person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :first_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class:"col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, class: "col-sm-2 control-label" %>
      <div class="col-sm-2">
        <%= f.date_field :date_of_birth, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :bio, class:"col-sm-2 control-label" %>
      <div class="col-sm-4">
        <%= f.text_area :bio, class: "form-control" %>
      </div>
    </div>

    <div class="checkbox">
      <label class="col-sm-offset-2">
        <%= f.check_box :active %>
        Active
      </label>
    </div>

    <div class="actions col-sm-offset-2">
      <%= f.submit "Create Person", class:"btn btn-info" %>
      <button type="button" class="btn btn-default "><%= link_to 'Cancel', people_path %></button>
    </div>
  </div>

<% end %>
